{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "建材データベース：JsonSchema",
    "type": "object",
    "additionalProperties": {
        "$ref": "#/definitions/material"
    },
    "definitions": {
        "material": {
            "description": "建材の種類",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Name": {
                    "description": "名称",
                    "type": "string",
                    "maxLength": 100
                },
                "熱伝導率": {
                    "description": "熱伝導率 W/mK",
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1000
                },
                "容積比熱": {
                    "description": "容積比熱 J/LK",
                    "anyOf": [
                        {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 5000
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "比熱": {
                    "description": "比熱 J/gK",
                    "anyOf": [
                        {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 10
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "密度": {
                    "description": "密度 g/L",
                    "anyOf": [
                        {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 10000
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            }
        }
    }
}