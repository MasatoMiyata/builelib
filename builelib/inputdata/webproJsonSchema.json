{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "WebプログラムVer3用JsonSchema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "Building": {
            "description": "様式BL",
            "$ref": "#/definitions/Building"
        },
        "Rooms": {
            "description": "様式RM",
            "type": "object",
            "additionalProperties":{
                "$ref": "#/definitions/Rooms"
            }
        },
        "EnvelopeSet":{
            "description": "様式BE1",
            "type": "object",
            "additionalProperties":{
                "$ref": "#/definitions/EnvelopeSet"
            }
        },
        "WallConfigure":{
            "description": "様式BE2",
            "type": "object",
            "additionalProperties":{
                "$ref": "#/definitions/WallConfigure"
            }
        },
        "WindowConfigure":{
            "description": "様式BE3",
            "type": "object",
            "additionalProperties":{
                "$ref": "#/definitions/WindowConfigure"
            }
        },
        "VentilationRoom":{
            "description": "様式V1",
            "type": "object",
            "additionalProperties":{
                "$ref": "#/definitions/VentilationRoom"
            }
        },
        "VentilationUnit":{
            "description": "様式V2",
            "type": "object",
            "additionalProperties": {
                "$ref": "#/definitions/VentilationUnit"
            }
        },
        "LightingSystems": {
            "description": "様式L",
            "type": "object",
            "additionalProperties": {
                "$ref": "#/definitions/LightingRoom"
            }
        }
    },
    "dependencies": {
        "VentilationRoom": ["Building","Rooms","VentilationUnit"],
        "LightingSystems": ["Building","Rooms"]
    },
    "required": [
        "Building", "Rooms"
    ],
    "definitions": {
        "Building": {
            "description": "様式BL",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Name": {
                    "description": "BL-1:建築物の名称",
                    "default":"-",
                    "type": "string",
                    "maxLength": 1000
                },
                "BuildingAddress": {
                    "description": "BL-2,3,4:建築物所在地",
                    "$ref": "#/definitions/BuildingAddress"
                },
                "Region": {
                    "description": "BL-5:地域の区分",
                    "type": "string",
                    "enum":[
                        "1",
                        "2",
                        "3",
                        "4",
                        "5",
                        "6",
                        "7",
                        "8"
                    ]
                },
                "AnnualSolarRegion": {
                    "description": "BL-6:年間日射地域区分",
                    "type": "string",
                    "enum":[
                        "A1",
                        "A2",
                        "A3",
                        "A4",
                        "A5"
                    ]
                },
                "BuildingFloorArea": {
                    "description": "BL-7:延べ面積 [m2]",
                    "type": "number",
                    "minimum": 0.01,
                    "maximum": 100000000
                },
                "Coefficient_DHC": {
                    "description": "BL-8,9:「他人から供給された熱」の一次エネルギー換算係数",
                    "$ref": "#/definitions/CoefficientDHC"
                }
            },
            "required": [
                "Region"
            ],
            "title": "Model"
        },
        "BuildingAddress": {
            "description": "BL-2,3,4:建築物所在地",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Prefecture": {
                    "description": "BL-2:都道府県",
                    "type": "string",
                    "maxLength": 100,
                    "default":"-"
                },
                "City": {
                    "description": "BL-3:市区町村",
                    "type": "string",
                    "maxLength": 100,
                    "default":"-"
                },
                "Address": {
                    "description": "BL-4:丁目、番地等",
                    "type": "string",
                    "maxLength": 1000,
                    "default":"-"
                }
            },
            "required": [
                "Address",
                "City",
                "Prefecture"
            ],
            "title": "BuildingAddress"
        },
        "CoefficientDHC": {
            "description": "BL-8,9:「他人から供給された熱」の一次エネルギー換算係数",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Cooling": {
                    "description": "BL-8:冷熱",
                    "default":1.36,
                    "type": [
                        "number",
                        "null"
                    ]
                },
                "Heating": {
                    "description": "BL-9:温熱",
                    "default":1.36,
                    "type": [
                        "number",
                        "null"
                    ]
                }
            },
            "required": [
                "Cooling",
                "Heating"
            ],
            "title": "CoefficientDHC"
        },
        "Rooms":{
            "properties": {
                "buildingType": {
                    "description": "RM-3:建物用途",
                    "type": "string",
                    "enum":[
                        "事務所等",
                        "ホテル等",
                        "病院等",
                        "物販店舗等",
                        "学校等",
                        "飲食店等",
                        "集会所等",
                        "工場等",
                        "共同住宅"
                    ]
                },
                "roomType": {
                    "description": "RM-4:室用途",
                    "type": "string"
                },
                "roomArea": {
                    "description": "RM-5:床面積",
                    "type": "number",
                    "minimum": 0,
                    "maximum": 10000000000
                },
                "floorHeight": {
                    "description": "RM-6:階高",
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1000
                },
                "ceilingHeight": {
                    "description": "RM-7:天井高",
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1000
                },
                "isCal_AC":{
                    "description": "RM-8:計算対象設備 空調",
                    "type": "boolean"
                },
                "isCal_V":{
                    "description": "RM-9:計算対象設備 換気",
                    "type": "boolean"
                },
                "isCal_L":{
                    "description": "RM-10:計算対象設備 照明",
                    "type": "boolean"
                },
                "isCal_HW":{
                    "description": "RM-11:計算対象設備 給湯",
                    "type": "boolean"
                },
                "isCal_EV":{
                    "description": "RM-12:計算対象設備 昇降機",
                    "type": "boolean"
                },
                "modelBuildingType":{
                    "type": "string"
                },
                "buildingGroup":{
                    "type": "string"
                }
            }
        },
        "EnvelopeSet":{
            "properties": {
                "isAirconditioned": {
                    "description": "BE1-3:空調の有無",
                    "type": "string",
                    "enum":[
                        "無",
                        "有"
                    ]
                },
                "WallList":{
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "Direction": {
                                "description": "BE1-4:方位",
                                "type": "string",
                                "enum":[
                                    "北",
                                    "北東",
                                    "東",
                                    "南東",
                                    "南",
                                    "南西",
                                    "西",
                                    "北西",
                                    "水平（上）",
                                    "水平（下）"
                                ]
                            },
                            "EnvelopeArea":{
                                "description": "BE1-5:外皮面積",
                                "anyOf":[
                                    {
                                        "type": "number",
                                        "minimum": 0,
                                        "maximum": 10000000
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            },
                            "EnvelopeWidth":{
                                "description": "BE1-6:外皮の幅",
                                "anyOf":[
                                    {
                                        "type": "number",
                                        "minimum": 0,
                                        "maximum": 10000000
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            },
                            "EnvelopeHeight":{
                                "description": "BE1-7:外皮の高さ",
                                "anyOf":[
                                    {
                                        "type": "number",
                                        "minimum": 0,
                                        "maximum": 1000
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            },
                            "WallSpec": {
                                "description": "BE1-8:断熱仕様名称",
                                "type": "string"
                            },
                            "WallType":{
                                "description": "BE1-9:外壁の種類",
                                "type": "string",
                                "enum":[
                                    "日の当たる外壁",
                                    "日の当たらない外壁",
                                    "地盤に接する外壁",
                                    "内壁"
                                ]
                            },
                            "WindowList":{
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "WindowID": {
                                            "description": "BE1-10:開口部仕様名称",
                                            "type": "string"
                                        },
                                        "WindowNumber":{
                                            "description": "BE1-11:建具等個数",
                                            "anyOf":[
                                                {
                                                    "type": "number",
                                                    "minimum": 0,
                                                    "maximum": 100000
                                                },
                                                {
                                                    "type": "null"
                                                }
                                            ]
                                        },
                                        "isBlind":{
                                            "type": "string",
                                            "description": "BE1-12:ブラインドの有無",
                                            "enum":[
                                                "有",
                                                "無"
                                            ]
                                        },
                                        "EavesID":{
                                            "description": "BE1-13:日除けの名称",
                                            "type": "string"
                                        },
                                        "Info": {
                                            "description": "BE1-14:備考",
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "WallConfigure":{
            "properties": {
                "structureType": {
                    "description": "BE2-2:構造種別",
                    "type": "string",
                    "enum":[
                        "木造",
                        "鉄筋コンクリート造等",
                        "鉄骨造",
                        "その他"
                    ]
                },
                "solarAbsorptionRatio":{
                    "description": "BE2-3:日射吸収率",
                    "anyOf":[
                        {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "inputMethod":{
                    "description": "断熱性能の入力方法",
                    "type": "string",
                    "enum":[
                        "熱貫流率を入力",
                        "建材構成を入力",
                        "断熱材種類を入力"
                    ]
                },
                "materialID":{
                    "description": "BE2-4:断熱材の種類",
                    "anyOf":[
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "Rvalue":{
                    "description": "BE2-5:熱伝導率",
                    "anyOf":[
                        {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 10
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "thickness":{
                    "description": "BE2-6:厚み",
                    "anyOf":[
                        {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1000
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "Uvalue":{
                    "description": "BE2-10:熱貫流率",
                    "type": "number",
                    "minimum": 0,
                    "maximum": 10
                },
                "Info": {
                    "description": "BE2-11:備考",
                    "type": "string"
                },
                "layers":{
                    "type": "array",
                    "items":{
                        "type": "object",
                        "properties": {
                            "materialID":{
                                "description": "BE2-7:断熱材の種類",
                                "anyOf":[
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            },
                            "Rvalue":{
                                "description": "BE2-8:熱伝導率",
                                "anyOf":[
                                    {
                                        "type": "number",
                                        "minimum": 0,
                                        "maximum": 10
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            },
                            "thickness":{
                                "description": "BE2-9:厚み",
                                "anyOf":[
                                    {
                                        "type": "number",
                                        "minimum": 0,
                                        "maximum": 1000
                                    },
                                    {
                                        "type": "null"
                                    }
                                ]
                            },
                            "Info": {
                                "description": "BE2-11:備考",
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "WindowConfigure":{
            "properties": {
                "windowArea": {
                    "description": "BE3-2:窓面積",
                    "anyOf":[
                        {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 100000
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "windowWidth": {
                    "description": "BE3-3:窓の幅",
                    "anyOf":[
                        {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 100000
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "windowHeight": {
                    "description": "BE3-4:窓の高さ",
                    "anyOf":[
                        {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 100000
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "inputMethod":{
                    "description": "窓性能の入力方法",
                    "type": "string",
                    "enum":[
                        "性能値を入力",
                        "ガラスの性能を入力",
                        "ガラスの種類を入力"
                    ]
                },
                "frameType": {
                    "description": "BE3-5:建具の種類",
                    "type": "string",
                    "enum":[
                        "樹脂製",
                        "木製",
                        "金属樹脂複合製",
                        "金属木複合製",
                        "金属製"
                    ]
                },
                "glassID":{
                    "description": "BE3-6:ガラス建築確認記号",
                    "type": "string"
                },
                "layerType": {
                    "description": "BE3-7:ガラスの層数",
                    "type": "string",
                    "enum":[
                        "複層",
                        "単層"
                    ]
                },
                "glassUvalue":{
                    "description": "BE3-8:ガラスの熱伝導率",
                    "anyOf":[
                        {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 10
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "glassIvalue":{
                    "description": "BE3-9:ガラスの日射熱取得率",
                    "anyOf":[
                        {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1
                        },
                        {
                            "type": "null"
                        }
                    ]
                }, 
                "windowUvalue":{
                    "description": "BE3-10:窓の熱伝導率",
                    "anyOf":[
                        {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 10
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "windowIvalue":{
                    "description": "BE3-11:窓の日射熱取得率",
                    "anyOf":[
                        {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1
                        },
                        {
                            "type": "null"
                        }
                    ]
                }, 
                "Info": {
                    "description": "BE3-12:備考",
                    "type": "string"
                }
            }
        },
        "VentilationRoom":{
            "properties": {
                "VentilationType": {
                    "description": "V1-3:換気方式",
                    "type": "string",
                    "enum":[
                        "一種換気",
                        "二種換気",
                        "三種換気"
                    ]
                },
                "VentilationUnitRef": {
                    "type": "object",
                    "additionalProperties": {
                        "properties": {
                            "UnitType": {
                                "description": "V1-4:機器の種類",
                                "type": "string",
                                "enum":[
                                    "給気",
                                    "排気",
                                    "空調",
                                    "循環"
                                ]
                            },
                            "Info": {
                                "description": "V1-6:備考",
                                "type": "string"
                            }
                        }
                    }
                }
            },
            "required": [
                "VentilationUnitRef"
            ],
            "title": "VentilationRoom"
        },
        "VentilationUnit":{
            "type": "object",
            "properties": {
                "Number": {
                    "description": "V2-2:台数",
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1000
                },
                "FanAirVolume": {
                    "description": "V2-3:設計風量",
                    "anyOf":[
                        {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 10000000
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "MoterRatedPower": {
                    "description": "V2-4:定格電動機出力",
                    "anyOf":[
                        {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 10000000
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "PowerConsumption": {
                    "description": "V2-5:定格消費電力",
                    "anyOf":[
                        {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 10000000
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "HighEfficiencyMotor": {
                    "description": "V2-6:高効率電動機の有無",
                    "type": "string",
                    "enum":[
                        "無",
                        "有"
                    ],
                    "default":"無"
                },
                "Inverter": {
                    "description": "V2-7:インバータの有無",
                    "type": "string",
                    "enum":[
                        "無",
                        "有"
                    ],
                    "default":"無"
                },
                "AirVolumeControl": {
                    "description": "V2-8:送風量制御",
                    "type": "string",
                    "enum":[
                        "無",
                        "CO濃度制御",
                        "温度制御"
                    ],
                    "default":"無"
                },
                "VentilationRoomType": {
                    "description": "V2-9:対象室の用途",
                    "anyOf":[
                        {
                            "type": "string",
                            "enum":[
                                "電気室",
                                "機械室",
                                "エレベータ機械室",
                                "その他"
                            ],
                            "default":"その他"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "AC_CoolingCapacity": {
                    "description": "V2-10:必要冷却能力",
                    "anyOf":[
                        {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 10000000
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "AC_RefEfficiency": {
                    "description": "V2-11:熱源効率(一次換算値)",
                    "anyOf":[
                        {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 10000000
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "AC_PumpPower": {
                    "description": "V2-12:ポンプの定格消費電力",
                    "anyOf":[
                        {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 10000000
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "Info": {
                    "description": "V1-6:備考",
                    "type": "string"
                }
            },
            "required": [
                "Number",
                "FanAirVolume",
                "MoterRatedPower",
                "PowerConsumption",
                "HighEfficiencyMotor",
                "Inverter",
                "AirVolumeControl",
                "VentilationRoomType",
                "AC_CoolingCapacity",
                "AC_RefEfficiency",
                "AC_PumpPower",
                "Info"
            ],
            "title": "VentilationUnit"
        },
        "LightingRoom": {
            "properties": {
                "roomWidth": {
                    "description": "L-3:室指数　室の間口 [m]",
                    "anyOf":[
                        {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1000000000
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "roomDepth": {
                    "description": "L-4:室指数　室の奥行 [m]",
                    "anyOf":[
                        {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1000000000
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "unitHeight": {
                    "description": "L-5:室指数　器具高さ [m]",
                    "anyOf":[
                        {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1000000000
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "roomIndex": {
                    "description": "L-6:室指数 [-]",
                    "anyOf":[
                        {
                            "type": "number",
                            "default": 2.5,
                            "minimum": 0,
                            "maximum": 1000000000
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "lightingUnit": {
                    "type": "object",
                    "additionalProperties": {
                        "additionalProperties": false,
                        "properties": {
                            "RatedPower": {
                                "description": "L-8:定格消費電力 [W/台]",
                                "type": "number",
                                "minimum": 0,
                                "maximum": 1000000000
                            },
                            "Number": {
                                "description": "L-9:台数",
                                "type": "number",
                                "minimum": 0,
                                "maximum": 1000000000,
                                "default": 1
                            },
                            "OccupantSensingCTRL": {
                                "$ref": "#/definitions/Lighting_OccupantSensingCTRL"
                            },
                            "IlluminanceSensingCTRL": {
                                "$ref": "#/definitions/Lighting_IlluminanceSensingCTRL"
                            },
                            "TimeScheduleCTRL": {
                                "$ref": "#/definitions/Lighting_TimeScheduleCTRL"
                            },
                            "InitialIlluminationCorrectionCTRL": {
                                "$ref": "#/definitions/Lighting_InitialIlluminationCorrectionCTRL"
                            }
                        }
                    }
                }
            },
            "required": [
                "lightingUnit"
            ],
            "title": "LightingRoom"
        },
        "Lighting_OccupantSensingCTRL": {
            "description": "L-10:在室検知制御",
            "type": "string",
            "enum":[
                "無",
                "下限調光方式",
                "点滅方式",
                "減光方式"
            ],
            "default":"無"
        },
        "Lighting_IlluminanceSensingCTRL": {
            "description": "L-11:明るさ検知制御",
            "type": "string",
            "enum":[
                "無",
                "調光方式",
                "調光方式BL",
